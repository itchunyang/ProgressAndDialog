<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itchunyang.progressanddialog.MainActivity"
    android:orientation="vertical">

    <ProgressBar
        android:secondaryProgress="40"
        android:progress="20"
        android:max="100"
        android:layout_marginTop="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:secondaryProgress="40"
        android:progress="20"
        android:max="100"
        android:layout_marginTop="10dp"
        android:progressDrawable="@drawable/custom_horizontal_drawable"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:progress="20"
            android:max="100"
            android:layout_marginTop="10dp"
            android:indeterminateBehavior="cycle"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_marginLeft="20dp"
            android:progress="20"
            android:max="100"
            android:layout_marginTop="10dp"
            android:indeterminateDuration="2400"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:interpolator="@android:anim/bounce_interpolator"
            android:layout_marginLeft="20dp"
            android:progress="20"
            android:max="100"
            android:layout_marginTop="10dp"
            android:indeterminateDuration="3400"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_marginLeft="20dp"
            android:progress="20"
            android:max="100"
            android:layout_marginTop="10dp"
            android:indeterminateDuration="1400"
            android:indeterminateDrawable="@drawable/custom_circle_drawable"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ProgressBar
            android:layout_marginLeft="20dp"
            android:progress="20"
            android:max="100"
            android:layout_marginTop="10dp"
            android:indeterminateDrawable="@drawable/custom_circie_drawable1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_marginLeft="20dp"
            android:progress="20"
            android:max="100"
            android:layout_marginTop="10dp"
            android:indeterminateDrawable="@drawable/custom_circle_drawable2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:indeterminateDuration="800"
            android:indeterminateDrawable="@drawable/custom_circle_drawable3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="start"
            android:text="开始"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ProgressBar
        android:progressDrawable="@drawable/custom_vertical_drawable"
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="20dp"
        android:progress="40"
        android:max="100"
        android:layout_width="15dp"
        android:layout_height="250dp" />

</LinearLayout>
